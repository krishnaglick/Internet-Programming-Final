<section id="point-me-app">
    {{document-title title=appName}}
    <div class="ui centered grid" style="width: 100%;">
        <div class="row"></div>
        <div class="row">
            <div class="seven wide column">
                <h2 class="ui dark blue header">
                    <i class="ui dark blue circular marker icon"></i>
                    {{appName}}
                </h2>
            </div>
            <div class="column">
                {{#if session.isAuthenticated}}
                <div class="ui compact inverted green button" {{action 'invalidateSession'}}>
                    Logout
                </div>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="eight wide column">
                <section id="main">
                    {{outlet}}
                </section>
            </div>
        </div>
    </div>
</section>
