<form class="ui form {{loading}}">
    <div class="field">
        {{input value=user.username placeholder="Username" action="enterAction" type="text" autofocus="autofocus"}}
    </div>
    <div class="field">
        {{input value=user.password placeholder="Password" action="enterAction" type="password"}}
    </div>
    {{#if isRegistering}}
    <div class="field">
        {{input value=user.email placeholder="Email" action="enterAction" type="text"}}
    </div>
    {{/if}}

    {{#if isRegistering}}
    <div class="ui compact inverted green button {{if canRegister '' 'disabled'}}" {{action 'register'}}>
        Register
    </div>
    <div class="ui compact inverted red button" {{action 'cancelCreateAccount'}}>
        Cancel
    </div>
    {{else}}
    <div class="ui compact inverted green button {{if canLogin '' 'disabled'}}" {{action 'login'}}>
        Login
    </div>
    <div class="ui compact inverted blue button" {{action 'createAccount'}}>
        Create Account
    </div>
    {{/if}}
</form>
